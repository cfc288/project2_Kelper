    <h1>Edit Client Page</h1>

    <form action="/clients/<%= client.id %>?_method=PUT" method="POST">
      Client Name: 
        <input 
            type="text" 
            name="clientName" 
            value="<%= client.clientName %>" 
        /> 
        <br/>
      Incident Report:  
        <input 
            type="text" 
            name="review"
            value="<%= client.review %>"
        /> 
        <br/>
    
        
        <br/>

      <input type="submit" value="Update Client" />
    </form>


